{
  "name": "NeoEarth-MC",
  "version": "1.0.4",
  "publicVersion": "1.0.4",
  "description": "Launcher officiel",
  "main": "Main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "win": "electron-builder --windows",
    "win:x64": "electron-builder --windows --x64",
    "win:ia32": "electron-builder --windows --ia32",
    "mac": "electron-builder --mac",
    "mac:intel": "electron-builder --mac --x64",
    "mac:arm": "electron-builder --mac --arm64",
    "mac:universal": "electron-builder --mac --universal"
  },
  "keywords": [],
  "author": "NeoEarth-MC",
  "license": "ISC",
  "devDependencies": {
    "electron": "^29.1.2",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "discord-rpc": "^4.0.1",
    "dotenv": "^16.4.7",
    "electron-log": "^5.1.2",
    "electron-store": "^8.1.0",
    "express": "^4.18.3",
    "express-handlebars": "^7.1.2",
    "fs": "^0.0.1-security",
    "minecraft-launcher-core": "^3.18.2",
    "nodejs-file-downloader": "^4.13.0",
    "xml-js": "^1.6.11"
  },
  "build": {
    "win": {
      "icon": "./assets/icon/logo.png",
      "publisherName": "NeoEarth-MC",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ],
      "artifactName": "${productName}-${version}-windows-${arch}.${ext}"
    },
    "mac": {
      "icon": "./assets/icon/logo.png",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64", "universal"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64", "universal"]
        }
      ],
      "artifactName": "${productName}-${version}-mac-${arch}.${ext}",
      "category": "public.app-category.games"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "runAfterFinish": true,
      "uninstallDisplayName": "NeoEarth-MC",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "NeoEarth-MC"
    }
  }
}